<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:orientation="horizontal"
              android:padding="10sp" android:id="@+id/list_item_panel" android:longClickable="true">


    <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical" android:duplicateParentState="true" android:clickable="false">

        <TextView
                android:id="@+id/medicine_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Witamina C" android:duplicateParentState="true" android:clickable="false"/>

        <TextView
                android:id="@+id/medicine_item_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="tabletki" android:duplicateParentState="true" android:clickable="false"/>

        <TextView
                android:id="@+id/medicine_item_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ilość" android:duplicateParentState="true" android:clickable="false"/>

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/medicine_item_createdat"
                tools:text="data utworzenia"/>
        <TextView
                android:id="@+id/medicine_item_duedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="data ważności" android:duplicateParentState="true" android:clickable="false"/>


    </LinearLayout>

    <ImageView
            android:id="@+id/medicine_simple_item_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/no_photo_icon"/>


</LinearLayout>