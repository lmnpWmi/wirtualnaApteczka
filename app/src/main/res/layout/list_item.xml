<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal"
    android:padding="16dp">


    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicine_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Witamina C" />

        <TextView
            android:id="@+id/medicine_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="tabletki" />

        <TextView
            android:id="@+id/medicine_item_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="ilość" />

        <TextView
            android:id="@+id/medicine_item_duedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="data ważności" />


    </LinearLayout>

    <ImageView
        android:id="@+id/medicine_simple_item_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/large_icons" />


</LinearLayout>