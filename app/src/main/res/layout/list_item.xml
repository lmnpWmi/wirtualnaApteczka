<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:longClickable="true"
    android:orientation="horizontal"
    android:padding="10sp">


    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:clickable="false"
        android:duplicateParentState="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/medicine_item_name"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Witamina C" />

        <Button
            android:id="@+id/share_medicine_btn"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_gravity="left"
            android:background="#FFC107"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:text="@string/share"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/medicine_item_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            tools:text="@string/pills" />


        <TextView
            android:id="@+id/medicine_item_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            tools:text="@string/quantity" />

        <TextView
            android:id="@+id/medicine_item_createdat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            tools:text="@string/date_add" />

        <TextView
            android:id="@+id/medicine_item_duedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:duplicateParentState="true"
            tools:text="@string/date_expiration" />


    </LinearLayout>

    <ImageView
        android:id="@+id/medicine_simple_item_thumbnail"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_gravity="center"
        android:minHeight="@android:dimen/app_icon_size"
        android:minWidth="@android:dimen/app_icon_size"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/icon_no_photo" />


</LinearLayout>