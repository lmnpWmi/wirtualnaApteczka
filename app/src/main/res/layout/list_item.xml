<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="16dp" android:background="@android:color/transparent">


    <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:textSize="18sp"
                tools:text="Witamina C" android:id="@+id/medicine_item_name" android:textStyle="bold"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="tabletki"

                android:id="@+id/medicine_item_type"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="ilość"

                android:id="@+id/medicine_item_amount"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="data ważności"

                android:id="@+id/medicine_item_duedate"/>


    </LinearLayout>

    <ImageView
            android:id="@+id/medicine_item_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/icons8_picture_96"/>


</LinearLayout>