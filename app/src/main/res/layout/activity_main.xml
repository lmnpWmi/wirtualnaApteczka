<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_background"
    android:orientation="vertical">


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"

            android:background="@android:color/transparent">

        <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" android:id="@+id/add_medicine_panel">

            <ImageButton
                    android:id="@+id/add_medicine_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/add_medicine_icon" android:duplicateParentState="true"
                    android:clickable="false"/>

            <TextView
                    android:id="@+id/add_medicine_photo_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/add_medicine"
                    android:textSize="20sp" android:duplicateParentState="true" android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="openMyList"
                android:orientation="vertical" android:id="@+id/medicine_list_panel">

            <ImageButton
                    android:id="@+id/medicine_list_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/my_medicine_list" android:duplicateParentState="true"
                    android:clickable="false"/>

            <TextView
                    android:id="@+id/medicine_list_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/my_list_medicine"
                    android:textSize="20sp" android:duplicateParentState="true" android:clickable="false"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" android:id="@+id/friends_panel">

            <ImageButton
                    android:id="@+id/my_friends_img_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    app:srcCompat="@drawable/icons8_couple_96" android:duplicateParentState="true"
                    android:clickable="false"/>
            <TextView
                    android:id="@+id/my_friends_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/friends"
                    android:textSize="20sp" android:duplicateParentState="true" android:clickable="false"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp" android:background="@android:color/transparent">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/last_searched"
                android:textSize="20sp"/>

        <TextView
                android:id="@+id/empty_recently_used_medicines"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:paddingTop="10dp"
                android:text="@string/not_searched_yet"
                android:textColor="@color/grey"/>
    </LinearLayout>
</LinearLayout>